        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DailyPadCalenderActivity"
            android:label="@string/title_activity_daily_pad_calender" >
        </activity>
        <activity
            android:name=".OmikujiActivity"
            android:label="@string/title_activity_omikuji" >
        </activity>
        <activity
            android:name=".DentakuActivity"
            android:label="@string/title_activity_dentaku" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>