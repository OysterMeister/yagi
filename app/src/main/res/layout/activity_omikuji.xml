<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jinja2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/omikuji_002"
        android:id="@+id/omikuji_hiku_btn"
        android:background="@drawable/btnred"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:textAppearance="@style/LargeTextBold" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/omikuji_iv"
        android:layout_above="@+id/omikuji_hiku_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:src="@drawable/omikuji" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/hituji_kaku_iv"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hituji_kaku" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hituji_odoru_fukidasi_iv"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hituji_odoru_fukidasi" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/hituji_kaku_iv"
        android:layout_above="@+id/omikuji_iv"
        android:layout_alignRight="@+id/omikuji_iv"
        android:layout_alignEnd="@+id/omikuji_iv"
        android:layout_alignLeft="@+id/hituji_kaku_iv"
        android:layout_alignStart="@+id/hituji_kaku_iv"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"
        android:id="@+id/result_ll">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="結果"
            android:id="@+id/result_msg_1_tv"
            android:textAppearance="@style/LargeTextBold"
            android:gravity="center"
            android:textColor="@color/red" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="いいことあるかも"
            android:id="@+id/result_msg_2_tv"
            android:textAppearance="@style/SmallTextBold"
            android:paddingTop="5dp" />
    </LinearLayout>

</RelativeLayout>