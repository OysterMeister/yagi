<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/secret_long_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/display_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/secret_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/number_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:scrollHorizontally="true"
                        android:ellipsize="start"
                        android:gravity="right"
                        android:padding="15dp"
                        android:text="0"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/enzanshi_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""
                        android:textSize="30sp"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
            </LinearLayout>

            <!-- 789C/AC -->

            <LinearLayout
                android:id="@+id/key_789_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/num7_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_7" />

                <Button
                    android:id="@+id/num8_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_8" />

                <Button
                    android:id="@+id/num9_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_9" />

                <Button
                    android:id="@+id/clear_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_c" />

                <Button
                    android:id="@+id/del_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_ac" />
            </LinearLayout>

            <!-- 456-รท -->

            <LinearLayout
                android:id="@+id/key_456_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/num4_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_4" />

                <Button
                    android:id="@+id/num5_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_5" />

                <Button
                    android:id="@+id/num6_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_6" />

                <Button
                    android:id="@+id/hiku_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_hiku" />

                <Button
                    android:id="@+id/waru_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_waru" />

            </LinearLayout>

            <!-- 123+ร -->

            <LinearLayout
                android:id="@+id/key_123_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/num1_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_1" />

                <Button
                    android:id="@+id/num2_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_2" />

                <Button
                    android:id="@+id/num3_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_3" />

                <Button
                    android:id="@+id/tasu_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_tasu" />

                <Button
                    android:id="@+id/kakeru_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_kakeru" />

            </LinearLayout>

            <!-- 000.= -->

            <LinearLayout
                android:id="@+id/key_000_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sp1_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape_gray"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/num0_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_0" />

                <Button
                    android:id="@+id/dot_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_dot" />

                <Button
                    android:id="@+id/cmp_bt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_cmp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/oystars_logo_iv"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/oystars"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/pakutaso_logo_iv"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/pakutaso_logo2014"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <!-- nav drawer:ใใใstartๅดใซๅฏใใ -->
    <LinearLayout
        android:layout_gravity="start"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="#F5D0A9">

        <ListView
            android:id="@+id/side_menu_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>